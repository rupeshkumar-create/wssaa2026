# Production Environment Variables Template for Vercel
# Copy this file to .env.production and fill in your actual values
# DO NOT commit .env.production to git

# Application Configuration
WSA_YEAR=2026
NEXT_PUBLIC_APP_URL=https://your-app.vercel.app

# Supabase Configuration (REQUIRED)
SUPABASE_URL=your_supabase_url_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Admin Authentication (REQUIRED)
ADMIN_EMAILS=admin@yourcompany.com
ADMIN_PASSWORD_HASHES=your_bcrypt_hash_here
SERVER_SESSION_SECRET=your_jwt_secret_here

# Sync Protection (REQUIRED)
CRON_SECRET=your_cron_secret_here
SYNC_SECRET=your_sync_secret_here

# HubSpot Integration
HUBSPOT_ACCESS_TOKEN=your_hubspot_token_here
HUBSPOT_TOKEN=your_hubspot_token_here
HUBSPOT_PRIVATE_APP_TOKEN=your_hubspot_token_here
HUBSPOT_SYNC_ENABLED=true
HUBSPOT_CONTACT_LINKEDIN_KEY=linkedin
HUBSPOT_COMPANY_LINKEDIN_KEY=linkedin_company_page
HUBSPOT_PIPELINE_ID=test-pipeline
HUBSPOT_STAGE_SUBMITTED=test-submitted
HUBSPOT_STAGE_APPROVED=test-approved

# Loops Integration
LOOPS_API_KEY=your_loops_api_key_here
LOOPS_SYNC_ENABLED=true